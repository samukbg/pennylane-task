{
  "name": "pennylane",
  "version": "1.0.0",
  "main": "index.tsx",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "lint": "expo lint",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "api": "yarn openapi:gen && yarn openapi:convert",
    "openapi:gen": "typegen ./openapi/schema.yml > src/api/generated/client.d.ts",
    "openapi:convert": "redocly bundle ./openapi/schema.yml -o ./src/api/generated/schema.json"
  },
  "dependencies": {
    "@react-native-masked-view/masked-view": "0.3.2",
    "@react-navigation/bottom-tabs": "7.4.7",
    "@react-navigation/elements": "2.6.4",
    "@react-navigation/native": "7.1.17",
    "@react-navigation/native-stack": "7.3.26",
    "@react-navigation/stack": "7.6.13",
    "@tamagui/config": "1.142.0",
    "@tamagui/core": "1.120.0",
    "@tamagui/lucide-icons": "1.120.0",
    "@tanstack/react-query": "5.62.3",
    "expo": "54.0.30",
    "expo-asset": "12.0.12",
    "expo-splash-screen": "31.0.13",
    "openapi-client-axios": "7.5.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.54.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "2.28.0",
    "react-native-safe-area-context": "5.6.0",
    "react-native-screens": "4.16.0",
    "react-native-svg": "15.12.1",
    "reactotron-react-native": "5.1.13",
    "tamagui": "1.142.0"
  },
  "devDependencies": {
    "@redocly/cli": "1.26.0",
    "@tamagui/babel-plugin": "1.142.0",
    "@testing-library/react-native": "13.3.3",
    "@types/jest": "29.5.14",
    "@types/react": "19.1.10",
    "babel-preset-expo": "54.0.9",
    "eslint": "9.39.2",
    "eslint-config-expo": "10.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "jest": "29.7.0",
    "jest-expo": "54.0.16",
    "openapi-client-axios-typegen": "7.7.0",
    "prettier": "3.7.4",
    "typescript": "5.9.2"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg)"
    ]
  }
}
